{
    "compilerOptions": {
        "outDir": "./",
        "target": "es6",
        "module": "es6",
        "noImplicitAny": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "jsx": "react",
        "listFiles": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "include": [
        "../src/lib/**/*.tsx",
        "../src/lib/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ],
    "allowSyntheticDefaultImports": true
}
